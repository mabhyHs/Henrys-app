{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "plugin:react/recommended",
      "airbnb",
      "plugin:jsx-a11y/recommended",
      "plugin:react-hooks/recommended",
      "plugin:import/recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": ["react", "react-hooks", "import", "prettier"],
    "rules": {
      "indent": "off", /* sin indentacion */
      "default-param-last": "off", /* param default function */
      "no-unused-vars": "warn" /* advertencia: variable sin usar */,
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }] /* soporte de extensiones */
    }
  }
  